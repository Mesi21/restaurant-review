<p style="color: green"><%= notice %></p>

<div class="d-flex flex-column">
  <div>
    <%= @restaurant.name %>
    <%= @restaurant.address %>
    <%= @restaurant.phone %>
  </div>
  <div class="d-flex flex-row">
    <%= button_to "Edit", edit_restaurant_path(@restaurant), method: :get, class: "btn btn-success m-1" %> 
    <%= button_to "Back", restaurants_path, method: :get, class: "btn btn-success m-1" %>
    <%= button_to "Destroy", @restaurant, method: :delete, class: "btn btn-danger m-1" %>
  </div>
</div>
